{
  "name": "isterkh/query-builder",
  "description": "Simple SQL Query Builder",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Isterkh\\QueryBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Ilya Sterkhov",
      "email": "sterkh96@gmail.com"
    }
  ],
  "scripts": {
    "test": ["phpunit"],
    "stan": ["phpstan analyze"],
    "fix": "php-cs-fixer fix",
    "check": ["@fix", "@stan", "@test"]
  },
  "require-dev": {
    "phpunit/phpunit": "^12",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "friendsofphp/php-cs-fixer": "^3.92"
  },
  "require": {
    "ext-pdo": "*",
    "php": "^8.1"
  }
}
